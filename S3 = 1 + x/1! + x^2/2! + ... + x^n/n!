i = 1
factorial = 1
s = 0
lt = 1

print("Tính tổng S3 = 1 + x / 1! + x^2 / 2! + ... + x^n / n!")

while True:
    n = int(input("Nhập số N nguyên dương: "))
    if n > 0:
        break

x = float(input("Nhập số x: "))

for i in range(1, n+1, 1):
    lt = lt * x
    factorial = factorial * i
    s += lt / factorial

s = s + 1
print("Tổng là: " + str(s))


